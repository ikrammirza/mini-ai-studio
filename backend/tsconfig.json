{
  "compilerOptions": {
    "baseUrl": ".",              // required for path aliases
    "paths": {
      "@controllers/*": ["src/controllers/*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
